                    <children>
                        <CheckBox fx:id="registerCheckBox" mnemonicParsing="false" text="Вы тут впервые?" />
                        <Button fx:id="signInButton" mnemonicParsing="false" onAction="#signInButtonOnAction" text="Войти" />
                    </children>
                </HBox>
                <Label fx:id="isConnectedLabel" text="Подключён" textFill="RED" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.vgrow="NEVER" />
            </children>
        </GridPane>
    </children>
